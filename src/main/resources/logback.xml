<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Аппендер для RollingFile -->
    <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- Основной файл логов -->
        <file>logs/hippodrome.log</file>

        <!-- Настройка политики прокрутки -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Шаблон имени архивного файла -->
            <fileNamePattern>logs/hippodrome.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Удаление файлов старше 7 дней -->
            <maxHistory>7</maxHistory>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>

        <!-- Формат логов -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Корневой логгер -->
    <root level="info">
        <appender-ref ref="ROLLING" />
    </root>

</configuration>